@model IEnumerable<Patron_Center.Models.Diapositiva>
@{
    ViewData["Title"] = "VerDiapositivas";
}

<h1>VerDiapositivas</h1>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false" style="background-color:dimgrey;color:white;height:80%;">

    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.Count(); i++)
        {
            @if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>

    <div class="carousel-inner">

        @foreach (var item in Model)
        {
            @if (Model.First() == item)
            {
                <div class="carousel-item active" style="text-align:center;font:Sans-serif;font-size:25px;padding: 25px 100px 25px 100px;min-height:600px">

                    <div>
                        <a>@Html.DisplayFor(modelItem => item.Texto)</a>
                    </div>

                    @if (item.UrlVideo != null)
                    {
                        <div>
                            <iframe width="700" height="500" src=https://www.youtube.com/embed/@item.UrlVideo frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    }

                </div>
            }
            else
            {
                <div class="carousel-item" style="text-align:center;font:Sans-serif;font-size:25px;padding: 25px 100px 25px 100px;min-height:600px">
                    <div>
                        <a>@Html.DisplayFor(modelItem => item.Texto)</a>
                    </div>
                    @if (item.UrlVideo != null)
                    {
                        <div>
                            <iframe width="700" height="500" src=https://www.youtube.com/embed/@item.UrlVideo frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    }
                </div>
            }

        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <a asp-controller="Unidades" asp-action="ViewUnitsLessons" asp-route-CursoId=@ViewBag.CursoId>Volver atras</a>
</div>
