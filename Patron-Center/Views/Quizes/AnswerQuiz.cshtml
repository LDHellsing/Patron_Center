@model Patron_Center.Models.Quiz

@{
    ViewData["Title"] = "Anawer Quiz";
}

<h1>@Model.Nombre</h1>
<br />

<div class="row">
    <form asp-action="QuizCorrection">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @foreach (var pregunta in Model.Preguntas)
            {
                <div class="form-group">
                    <label asp-for="@pregunta.Enunciado" class="control-label">@pregunta.Enunciado</label>
                </div>
                <div class="form-group">
                    @foreach(var respuesta in pregunta.Respuestas)
                    {
                    <div class="form-group">
                        <input type="radio" asp-for="@respuesta.Seleccionada" value="@respuesta.Id" id="@respuesta.PreguntaId" /> @respuesta.Enunciado <br/>
                    </div>
                    }
                </div>
                <br />
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary" />
        </div>
    </form>

</div>