@model Patron_Center.Models.RespuestaAlumnoDesarrollo

@{
    ViewData["Title"] = "Anawer Quiz Desarrollo";
}

<h1>@Model.QuizName</h1>
<br />

<form asp-action="QuizCorrectionDesarrollo" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @foreach (var pregunta in Model.Preguntas)
    {
        <div class="form-group">
            <label asp-for="@pregunta.Enunciado" class="control-label">@pregunta.Enunciado</label>
            <div>
                <textarea asp-for="@pregunta.Respuesta" class="form-control"></textarea>
            </div>
            <div>
                <input asp-for="@pregunta.Enunciado" class="form-control data-form" hidden="hidden" />
            </div>
            <div>
                <input asp-for="@pregunta.IdPregunta" class="form-control data-form" hidden="hidden" />
            </div>
        </div>
    }
    <div class="form-group">
        <input asp-for="@Model.IdQuiz" class="form-control data-form" hidden="hidden" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.IdUnidad" class="form-control data-form" hidden="hidden" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.QuizName" class="form-control data-form" hidden="hidden" />
    </div>
    <div class="form-group">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>
