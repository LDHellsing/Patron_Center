@model IEnumerable<Patron_Center.Models.Unidad>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



@foreach (var item in Model)
{
    <form asp-controller="Unidades" asp-action="Create" method="get">
        <a>
            <input type="hidden" name="CursoId" value=@item.CursoId>
            <input class="btn btn-link" type="submit" value="Crear Unidad" />
        </a>
    </form>
    break;
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eliminado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eliminado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-controller="Diapositivas" asp-action="Index" asp-route-UnidadId="@item.Id" class="btn btn-link">Ver Diapositivas</a>
                </td>
            </tr>
        }
    </tbody>
</table>

